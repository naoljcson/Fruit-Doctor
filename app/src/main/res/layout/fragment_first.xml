<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/scrollView1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TextView
                android:id="@+id/detailInfo_body_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:lineSpacingExtra="5sp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="14dp"
                />

            <TextView
                android:id="@+id/detailInfo_RecommendationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailInfo_body_Description"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:text="@string/recommendation_Title1_Disease"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:padding="15dp"/>

            <TextView
                android:id="@+id/detailInfo_Recommendation_Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="3sp"
                android:text="@string/recommendation_Detail"
                android:layout_marginBottom="24dp"/>

        </TableLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
